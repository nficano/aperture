{
  "name": "@nficano/aperture",
  "version": "0.1.24",
  "description": "Domain-driven observability toolkit for Nuxt apps and Node services.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./nuxt": {
      "types": "./dist/integrations/nuxt/index.d.ts",
      "import": "./dist/integrations/nuxt/index.js"
    },
    "./integrations/nuxt": {
      "types": "./dist/integrations/nuxt/index.d.ts",
      "import": "./dist/integrations/nuxt/index.js"
    },
    "./nuxt/types": {
      "types": "./dist/integrations/nuxt/nuxt-config.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "version:patch": "COREPACK_ENABLE_STRICT=0 npm version patch && git push && git push --tags",
    "version:minor": "COREPACK_ENABLE_STRICT=0 npm version minor && git push && git push --tags",
    "version:major": "COREPACK_ENABLE_STRICT=0 npm version major && git push && git push --tags",
    "publish": "COREPACK_ENABLE_STRICT=0 npm publish"
  },
  "peerDependencies": {
    "@sentry/node": "^7.0.0",
    "firebase-admin": "^12.0.0"
  },
  "peerDependenciesMeta": {
    "@sentry/node": {
      "optional": true
    },
    "firebase-admin": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@nuxt/schema": "^4.1.2",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^9.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "58.0.0",
    "jiti": "^2.6.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "environment": "node",
    "setupFiles": [
      "tests/setup.ts"
    ],
    "coverage": {
      "provider": "c8",
      "reportsDirectory": "coverage",
      "reporter": [
        "text",
        "html",
        "lcov"
      ],
      "include": [
        "src/core/**/*.ts",
        "src/providers/**/*.ts",
        "src/integrations/**/*.ts"
      ],
      "exclude": [
        "**/*.spec.ts",
        "dist/**",
        "scripts/**",
        "examples/**",
        "src/types/**"
      ],
      "lines": 0.95,
      "functions": 0.95,
      "branches": 0.9,
      "statements": 0.95
    }
  },
  "packageManager": "bun@1.0.0"
}
